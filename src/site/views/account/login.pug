extends ../layout

block content
  .aloha-container.aloha-container--short
    h1.aloha-header Login
    form.login-form(method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      .login-form__block
        label.login-form__label(for='email') Email
        input.login-form__input(type='email', name='email', id='email', placeholder='Email', autofocus, required)
      .login-form__block
        label.login-form__label(for='password') Password
        input.login-form__input(type='password', name='password', id='password', placeholder='Password', required)
      a.login-form__link(href='/forgot') Forgot your password?
      .login-form__block
        button.login-form__submit(type='submit')
          | Login

      .login-form__block
        a.btn.btn-block.btn-facebook.btn-social(href='/auth/facebook')
          i.fa.fa-facebook
          | Sign in with Facebook
        a.btn.btn-block.btn-twitter.btn-social(href='/auth/twitter')
          i.fa.fa-twitter
          | Sign in with Twitter
        a.btn.btn-block.btn-google.btn-social(href='/auth/google')
          i.fa.fa-google-plus
          | Sign in with Google
        a.btn.btn-block.btn-github.btn-social(href='/auth/github')
          i.fa.fa-github
          | Sign in with GitHub
        a.btn.btn-block.btn-linkedin.btn-social(href='/auth/linkedin')
          i.fa.fa-linkedin
          | Sign in with LinkedIn
        a.btn.btn-block.btn-instagram.btn-social(href='/auth/instagram')
          i.fa.fa-instagram
          | Sign in with Instagram
