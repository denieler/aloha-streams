extends ./widget-layout

block content
  script(id='json-socket-config', type='application/json').
    {
      "serverUrl": "#{serverUrl}",
      "streamerId": "#{streamerId}"
    }
  script(src='/socket.io/socket.io.js')
  script(src='/js/widget/new-challenge.js')
  link(href='https://fonts.googleapis.com/css?family=Quicksand', rel='stylesheet')
  audio(id='new-challenge-show-sound')
    source(src='/sounds/eye_of_the_tiger.mp3' type='audio/mpeg')

  .new-challege(id='new-challenge')
    .new-challege__header
      .new-challege__header__line New challenge
      .new-challege__header__line
        | from 
        span.new-challege__header__line__nickname(id='new-challenge-nickname')
    
    .new-challege__body
      .new-challege__body__text(id='new-challenge-name')
      .new-challege__body__line
      .new-challege__body__duration
        | Duration: 
        span.new-challege__body__duration__time(id='new-challenge-duration')
      .new-challege__body__reward
        | Price: 
        span.new-challege__body__reward__price(id='new-challenge-price')
