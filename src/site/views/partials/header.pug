.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle.navigation-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.logo(href='/')
        img.logo__image(src='/images/logo.svg')
    .collapse.navbar-collapse
      ul.nav.navbar-nav.navigation
        if user
            li(class=(title === 'Challenges') ? 'active' : undefined)
              a(href='/challenges/mine') My Challenges
        li(class=(title === 'Contact') ? 'active' : undefined)
          a(href='/contact') Contact us
      ul.nav.navbar-nav.navbar-right.navigation
        if !user
          li(class=(title === 'Login') ? 'active' : undefined)
            a(href='/login') Login
          li(class=(title === 'Create Account') ? 'active' : undefined)
            a(href='/signup') Create Account
        else
          li.dropdown(class=(title === 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture)
              else
                img(src=user.gravatar(60))
              span= user.profile.name || user.email || user.id
              i.caret
            ul.dropdown-menu
              li
                a(href='/account/challenges') Challenge settings
              li
                a(href='/account/widgets') Stream Widgets
              li
                a(href='/account/payments') Payments
              li
                a(href='/account') My Account
              li.divider
              li
                a(href='/logout') Logout
